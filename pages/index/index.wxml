<!--index.wxml-->
<page-meta>
	<navigation-bar title="BlueTV" loading="{{scaning}}" />
</page-meta>
<view class="container">
	<view class="bt-group">
		<button class="mini-btn" type="default" bindlongtap="toLogScreen" bindtap="startScan">
			Start Scan
		</button>
		<button class="mini-btn" type="default" bindtap="stopScan">Stop Scan</button>
	</view>
	<view hover-class="hover" class="list-item" wx:for="{{devices}}" wx:key="deviceId" bindtap="onConnectBlueItem" data-id="{{item.deviceId}}">
		<text>{{item.name || item.deviceId}}</text>
		<text>{{item.RSSI}}</text>
	</view>
</view>Â 