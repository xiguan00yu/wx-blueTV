	<navigation-bar title="BlueTV - WIRTE" loading="{{loading}}" />
</page-meta>
<view class="container">
	<view class="fc top-bar m-1" hover-class="hover" bindlongtap="toLogScreen" bindtap="onChooseImageWithDraw">
		<text class="h4 m-1">CHOOSE IMAGE FOR WIRTE</text>
		<view class="frn">
			<button class="m-1" type="default" catchtap="onConvertImage">CONVERT</button>
			<view class="m-1" />
