		</view>
	</view>
	<canvas type="2d" disable-scroll="true" id="canvas_box" style="width:{{fixedSize.width}}px;height:{{fixedSize.height}}px"></canvas>
	<textarea placeholder="generate code..." id="code_box" value="{{convertImageHexString}}" maxlength="-1" wx:if="{{!!convertImageHexString}}"></textarea>
